---
const { title, subtitle, buttonText, buttonLink, image } = Astro.props;
---
<section class="hero" style={`background-image: url('${image}')`}>
    <div class="hero-content">
        <h1>{title}</h1>
        <p>{subtitle}</p>
        {buttonText && buttonLink && (
            <a href={buttonLink} class="btn-primary">{buttonText}</a>
        )}
    </div>
</section>

<style>
.hero {
    background-size: cover;
    background-position: center;
    height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
}

.hero-content h1 {
    font-size: 2.5rem;
}

.hero-content p {
    font-size: 1.2rem;
    margin-top: 10px;
}

.btn-primary {
    display: inline-block;
    padding: 10px 20px;
    background-color: #c37a3e;
    color: white;
    text-decoration: none;
    margin-top: 15px;
    border-radius: 5px;
}

@media (max-width: 768px) {
    .hero-content h1 {
        font-size: 2rem;
    }
}
</style>
