</header>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const menuToggle = document.getElementById("menuToggle");
        const closeMenu = document.getElementById("closeMenu");
        const rightside = document.getElementById("rightside");

        if (menuToggle && rightside) {
            menuToggle.addEventListener("click", () => {
                rightside.classList.toggle("open");
            });
        }

        if (closeMenu && rightside) {
            closeMenu.addEventListener("click", () => {
                rightside.classList.remove("open");
            });
        }
    });
</script>

<style>
/* ESTILOS GENERALES */
.header {
    width: 100%;
    height: 100vh;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    color: white;
    position: relative;
}

/* NAVBAR */
.Navbar-Menu {
    width: 100%;
    padding: 15px 30px;
    /* display: flex; */
    justify-content: space-between;
    align-items: center;
    
}

.menu {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    border-radius: 10px;
}

.leftside img {
    width: 200px;
}

.rightside {
    display: flex;
    align-items: center;
}

.Icons a {
    margin: 0 15px;
    text-decoration: none;
    color: black;
    font-weight: bold;
    transition: color 0.3s ease;
}

.Icons a:hover {
    color: #fdd835;
}

.social {
    display: inline;
    align-items: center;
}

.social a {
    margin-left: 10px;
    font-size: 18px;
    color: black;
    transition: color 0.3s ease;
}

.social a:hover {
    color: #fdd835;
}

.close-icon{
    display: none;
}
/* MEN√ö HAMBURGUESA */
.menubar {
    display: none;
    cursor: pointer;
}

.menubar .line {
    width: 30px;
    height: 3px;
    background-color: black;
    margin: 5px 0;
}

@media (max-width: 900px) {
    .rightside {
        position: fixed;
        top: 0;
        right: -100%;
        width: 70%;
        height: 100vh;
        background-color: rgba(0, 0, 0, 0.9);
        flex-direction: column;
        align-items: center;
        justify-content: center;
        transition: right 0.3s ease-in-out;
        box-shadow: -4px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .rightside.open {
        right: 0;
    }

    .Icons {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .Icons a {
        margin: 15px 0;
        font-size: 18px;
        color:white;
    }

    .close-icon {
        position: absolute;
        top: 20px;
        right: 20px;
        font-size: 24px;
        color: white;
        cursor: pointer;
        display: block;
    }

    .menubar {
        display: block;
    }

    #Border{
        display:none;
    }
}

/* HERO */
.hero {
    height: calc(80vh - 80px);
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.hero-content h1 {
    font-size: 4rem;
}

.hero-content p {
    font-size: 2rem;
    margin-top: 10px;
}

.btn-primary {
    display: inline-block;
    padding: 10px 20px;
    background-color: #fdd835;
    color: black;
    text-decoration: none;
    margin-top: 15px;
    border-radius: 5px;
    font-weight: bold;
    font-size: 1.5rem;
}

.btn-primary:hover {
    background-color: #ffca28;
}

@media (max-width: 768px) {
    .hero-content h1 {
        font-size: 3rem;
    }
    .btn-primary {
        font-size: 1rem;
    }
}
</style>
